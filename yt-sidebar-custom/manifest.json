{
    "manifest_version": 3,
    "name": "YouTube Sidebar Tabs",
    "version": "1.0.0",
    "description": "YouTubeのサイドバーをタブ化して、関連動画・コメント・チャット・プレイリストを切り替えられるようにします。",
    "icons": {
        "48": "assets/icon.png",
        "128": "assets/icon.png"
    },
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "content/content.js"
            ],
            "css": [
                "content/content.css"
            ]
        }
    ],
    "permissions": []
}